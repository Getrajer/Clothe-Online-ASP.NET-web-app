@model ProductDetailsViewModel
@{
    ViewData["Title"] = Model.Product.Name;

    var photoPath = "~/images/" + (Model.Product.PhotoPath ?? "noimage.jpeg");
    var photoPath2 = "~/images/" + (Model.Product.PhotoPath2 ?? "noimage.jpeg");
    var photoPath3= "~/images/" + (Model.Product.PhotoPath3 ?? "noimage.jpeg");
}

<head>
    <link href="~/css/Product_details.css" rel="stylesheet"/>
</head>


<section id="product">

    <div class="row">


        <div class="col-lg-7">

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="img-container">
                    <div class="carousel-item active">
                        <img asp-append-version="true" class="d-block w-100 img-carousel" src="@photoPath" alt="@Model.Product.Name">
                    </div>

                    @if (Model.Product.PhotoPath2 != null)
                    {
                        <div class="carousel-item">
                            <img asp-append-version="true" class="d-block w-100 img-carousel" src="@photoPath2" alt="@Model.Product.Name">
                        </div>
                    }

                    @if (Model.Product.PhotoPath3 != null)
                    {
                        <div class="carousel-item">
                            <img asp-append-version="true" class="d-block w-100 img-carousel" src="@photoPath3" alt="@Model.Product.Name">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

        <div class="col-lg-5">
            <div class="desc-container">
                <div class="param-container">
                    <p>@Model.Product.Name</p>
                        Category:
                        @if (Model.Product.Category == Categories.Tshirts)
                        {
                            <span>T-Shirt</span>

                        }
                        else
                        {
                            <span>@Model.Product.Category</span>
                        }

                        <p>Description:</p>
                        @Model.Product.Description

                        <p class="price-txt">Price: £<span class="price-value">@Model.Product.Price</span></p>
                </div>
                <div class="stock">

                    @if (Model.Product.xsQuantity > 0)
                    {
                        <p>Size XS is aviable!</p>
                    }
                    else
                    {
                        <p>Size XS is is out of stock</p>
                    }
                    @if (Model.Product.sQuantity > 0)
                    {
                        <p>Size S is aviable!</p>
                    }
                    else
                    {
                        <p>Size S isis out of stock</p>
                    }
                    @if (Model.Product.mQuantity > 0)
                    {
                        <p>Size M is aviable!</p>
                    }
                    else
                    {
                        <p>Size M is is out of stock</p>
                    }
                    @if (Model.Product.lQuantity > 0)
                    {
                        <p>Size L is aviable!</p>
                    }
                    else
                    {
                        <p>Size L is is out of stock.</p>
                    }
                    @if (Model.Product.xlQuantity > 0)
                    {
                        <p>Size XL is aviable!</p>
                    }
                    else
                    {
                        <p>Size XL is out of stock.</p>
                    }

                </div>
                <div class="btn-container">
                    <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.Product.Id">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</section>