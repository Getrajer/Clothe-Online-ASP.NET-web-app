@model ProductCreateViewModel
@{
    ViewData["Title"] = "Create";
}


<head><link href="~/css/create.css" rel="stylesheet"/></head>

<h1>Create</h1>

<div class="row">
    <div class="form-container card col-12">

        <form enctype="multipart/form-data" asp-controller="Products" asp-action="Create" method="post" class="mt-3">

            <div class="form-group row">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Category"></label>
                <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<Categories>()"></select>
            </div>

            <div class="form-group row">
                <label asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div class="form-group row">
                <label asp-for="xsQuantity"></label>
                <input class="form-control" asp-for="xsQuantity" />
                <span class="text-danger" asp-validation-for="xsQuantity"></span>
            </div>

            <div class="form-group row">
                <label asp-for="sQuantity"></label>
                <input class="form-control" asp-for="sQuantity" />
                <span class="text-danger" asp-validation-for="sQuantity"></span>
            </div>

            <div class="form-group row">
                <label asp-for="mQuantity"></label>
                <input class="form-control" asp-for="mQuantity" />
                <span class="text-danger" asp-validation-for="mQuantity"></span>
            </div>

            <div class="form-group row">
                <label asp-for="lQuantity"></label>
                <input class="form-control" asp-for="lQuantity" />
                <span class="text-danger" asp-validation-for="lQuantity"></span>
            </div>

            <div class="form-group row">
                <label asp-for="xlQuantity"></label>
                <input class="form-control" asp-for="xlQuantity" />
                <span class="text-danger" asp-validation-for="xlQuantity"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Brand"></label>
                <input class="form-control" asp-for="Brand" />
                <span class="text-danger" asp-validation-for="Brand"></span>
            </div>

            <div class="form-group row">
                <label asp-for="DateOfProduction"></label>
                <input class="form-control" asp-for="DateOfProduction" />
                <span class="text-danger" asp-validation-for="DateOfProduction"></span>
            </div>


            <div class="form-group row">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Photo2" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo2" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Photo3" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo3" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>


            <div class="form-group row">
                <div class="form-group row">
                    <button class="btn btn-success" type="submit">Add Product</button>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }

        </form>
    </div>

</div>