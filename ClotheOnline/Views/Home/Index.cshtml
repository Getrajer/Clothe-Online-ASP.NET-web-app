@model IEnumerable<Product>


@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/main-page-style.css" />
</head>


<header>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/pictures/background1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/pictures/background2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/pictures/background3.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>


<section id="products-nav" class="text-center">
    <a>T-shirts</a>
    <a>Skirts</a>
    <a>Dresses</a>
    <a>Trousers</a>
    <a>T-shirts</a>
    <a>T-shirts</a>
    <a>T-shirts</a>
</section>

<div id="main-container">


    <section id="newest-products">
        <div class="title">
            <div class="title-container row">
                <div class="col-12">
                    <h1>Newest Products!</h1>
                </div>
                <div class="underline-container">
                    <div class="underline"></div>
                </div>
            </div>
        </div>

        
            <div class="products-container">
                <div class="row">
                    @foreach (var p in Model)
                    {

                        var photoPath = "~/images/" + (p.PhotoPath ?? "noimage.jpeg");

                        <div class="col-lg-4">
                            <div class="product">
                                <div class="product-img">
                                    <img asp-append-version="true" class="product-img" src="@photoPath" alt="@p.Name" />
                                </div>

                                <div class="product-desc">
                                    <p>Name: @p.Name</p>
                                    <p>Brand: @p.Brand</p>
                                    <p>Price: £@(p.Price)</p>
                                    <a asp-controller="products" asp-action="ProductDetails" asp-route-id="@p.Id" class="p-btn">Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        
    </section>


    <section id="brands">
        <div class="title">
            <div class="title-container row">
                <div class="col-12">
                    <h1>Brands</h1>
                </div>
                <div class="underline-container">
                    <div class="underline"></div>
                </div>
            </div>
        </div>
        <div class="brands-container">
            <div class="row text-center">

                <div class="col-lg-4">
                    <div class="brand yelloo">
                        <div class="overlay"></div>
                        <div class="brand-name">
                            <h1>Yello</h1>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="brand redoo">
                        <div class="overlay"></div>
                        <div class="brand-name">
                            <h1>Reddo</h1>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="brand blackoo">
                        <div class="overlay"></div>
                        <div class="brand-name">
                            <h1>Blackoo</h1>
                        </div>

                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="brand greenoo">
                        <div class="overlay"></div>
                        <div class="brand-name">
                            <h1>Greenoo</h1>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="brand pinkoo">
                        <div class="overlay"></div>
                        <div class="brand-name">
                            <h1>Pinkoo</h1>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="brand purpleoo">
                        <div class="overlay"></div>
                        <div class="brand-name">
                            <h1>Purpleoo</h1>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</div>


<section id="special-offers">

    <div class="offers-container">
        <div class="row">
            <div class="col-md-8">
                <div class="percentage-offers">
                    <div class="overlay"></div>
                    <div class="text-container text-center">
                        <h1>50% OFF ON ALL OF YELLOO STYLE</h1>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="purchase-offers">
                    <div class="overlay"></div>
                    <div class="text-container text-center">
                        <h1>GET £10 OFF WHEN INVITING FRIENDS</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>











